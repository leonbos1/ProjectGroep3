         <image>
            <Image url="@/Back.JPEG" />
         </image>
      </ImageView>
      <TextField fx:id="userName" alignment="CENTER" layoutX="258.0" layoutY="123.0" promptText="Username" style="-fx-background-color: transperent; -fx-border-width: 0px 0px 1px 0px; -fx-border-color: white; -fx-text-fill: white; -fx-prompt-text-fill: white;" />
      <TextField fx:id="hostIP" alignment="CENTER" layoutX="258.0" layoutY="173.0" prefHeight="26.0" prefWidth="160.0" promptText="Server IP" style="-fx-background-color: transperent; -fx-border-color: white; -fx-border-width: 0px 0px 1px 0px; -fx-prompt-text-fill: white; -fx-text-fill: white;" />
      <TextField fx:id="portNumber" alignment="CENTER" layoutX="258.0" layoutY="224.0" prefHeight="26.0" prefWidth="160.0" promptText="Port" style="-fx-background-color: transperent; -fx-border-color: white; -fx-border-width: 0px 0px 1px 0px; -fx-prompt-text-fill: white; -fx-text-fill: white;" />
