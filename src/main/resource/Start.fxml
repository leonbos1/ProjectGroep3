      <ImageView fitHeight="70.0" fitWidth="79.0" layoutX="303.0" layoutY="28.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/lock.png" />
         </image>
      </ImageView>
      <Button fx:id="hanzeServer" defaultButton="true" layoutX="278.0" layoutY="346.0" mnemonicParsing="false" onAction="#guiServerHubHanze" opacity="0.63" prefHeight="27.0" prefWidth="123.0" style="-fx-background-color: #FF6700; -fx-background-radius: 100; -fx-text-fill: white;" text="Hanze Server" />
   </children>
</AnchorPane>
